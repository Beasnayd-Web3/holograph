{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "outDir": "./dist",
    "rootDirs": ["./src"],
    "target": "ES2022"
  },
  "exclude": ["dist", "node_modules"],
  "include": ["./src"]
}
